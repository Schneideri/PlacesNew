<?xml version="1.0" encoding="utf-8"?>	
     
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_checkboxes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
		
		android:layout_margin="8dp"
		android:layout_marginLeft="4dp"
		android:weightSum="3">
    	
        <LinearLayout android:orientation="vertical"
             android:tag="tagsvertical"
             
             android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_weight="1"
    			android:layout_marginLeft="4dp">

             <CheckBox
		        android:id="@+id/cb_ancient"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="ancient" />
                    
            <CheckBox
                android:id="@+id/cb_animals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="cb"
                android:text="animals" />
            
             <CheckBox
                 android:id="@+id/cb_art"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:tag="cb"
                 android:text="art" />
            
		    <CheckBox
		        android:id="@+id/cb_beautiful"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="beautiful" />
		    
		     <CheckBox
		        android:id="@+id/cb_children"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="children" />
		    
		    <CheckBox
		        android:id="@+id/cb_date"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="date" />		    		    
		        
		   </LinearLayout>
		   
    		<LinearLayout android:orientation="vertical"
    		     android:tag="tagsvertical"
    		     
    		    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_weight="1">
		   
    		     <CheckBox
    		         android:id="@+id/cb_day"
    		         android:layout_width="wrap_content"
    		         android:layout_height="wrap_content"
    		         android:tag="cb"
    		         android:text="day" />
		     
		      <CheckBox
		          android:id="@+id/cb_faraway"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:tag="cb"
		          android:text="faraway" />
		      
		      <CheckBox
		          android:id="@+id/cb_food"

		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:tag="cb"
		          android:text="food" />
		   
		       <CheckBox
		        android:id="@+id/cb_friends"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="friends" />
		     
		     <CheckBox
		        android:id="@+id/cb_drinks"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="drinks" />
		
		    <CheckBox
		        android:id="@+id/cb_nature"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="nature" />
		    
		     <Button
        android:id="@+id/bSearch_tagsdialog"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:tag="button"
        android:text="search"
        android:background="@android:color/darker_gray"
        android:textSize="14dp" />
		    		     	     		   	       
		     </LinearLayout>
		      <LinearLayout android:orientation="vertical"
		           android:tag="tagsvertical"
    		    android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			
    			android:layout_weight="1">
		    		          
		        <CheckBox
		            android:id="@+id/cb_night"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:tag="cb"
		            android:text="night" />
		     
		      <CheckBox
		          android:id="@+id/cb_party"
		          android:layout_width="wrap_content"
		          android:layout_height="wrap_content"
		          android:tag="cb"
		          android:text="party" />
		          
		        <CheckBox
		            android:id="@+id/cb_private"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:tag="cb"
		            android:text="private" />
		     
		       <CheckBox
		        android:id="@+id/cb_quiet"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="quiet" />
		       
		      <CheckBox
		        android:id="@+id/cb_shop"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="shop" />
		      
		       <CheckBox
		        android:id="@+id/cb_water"
		        android:tag="cb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="water" />
		       
		      </LinearLayout>
		   </LinearLayout>